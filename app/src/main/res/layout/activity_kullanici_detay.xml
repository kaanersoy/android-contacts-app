<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_kullanici_detay"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/kirmizi"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kullanıcı Detay Arayüzü"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:padding="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici Adi"
        android:id="@+id/tvDetayKullaniciAdi"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:gravity="center"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:text="Kullanici E-Mail"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetayEmail"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:gravity="center"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:text="Kullanici Katılma Tarihi"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetayKatilan"
        android:textSize="25dp"
        android:textStyle="bold"/>

</LinearLayout>